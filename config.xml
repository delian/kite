<?xml version='1.0' encoding='utf-8'?>
<widget id="bg.dsmarter.kite" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kite</name>
    <description>
       Kite Demo
    </description>
    <author email="delian.delchev@gmail.com" href="http://deliantech.blogspot.com">
        Delian Delchev
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.1" />
    <plugin name="org.dartlang.phonegap.barometer" spec="https://github.com/zanderso/cordova-plugin-barometer.git" />
    <plugin name="cordova-plugin-splashscreen" spec="~2.1.0" />
    <plugin name="cordova-plugin-geolocation" spec="~1.0.1" />
    <plugin name="cordova-plugin-device-motion" spec="~1.1.1" />
</widget>
